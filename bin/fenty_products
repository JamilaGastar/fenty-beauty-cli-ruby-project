require_relative '../config/environment'

puts "Fenty Beauty Product Search App"
puts "-------------------------------"
puts

loop do
    puts "Type stop to Quit Application"
    puts
    print "Enter a product type to bring up a list of those products (e.g. lipstick, foundation, eyeliner): "
    product_type_list = gets.chomp
    if product_type_list == 'stop'
        break
    end
    puts

    puts "FENTY BEAUTY'S #{product_type_list}'s"
    FentyProducts.list_products_by_product_type(product_type_list).each do |product|
    puts "Product Name: #{product.name}"
    puts
    end


    print "Enter the product name from the list to display the product details: "
    product_name = gets.chomp
    puts 


    product_details = FentyProducts.get_the_product_details(product_name)
    puts "PRODUCT DETAILS:"
    puts "Product Name: #{product_details.name}"
    puts "Product Price: $#{product_details.price}"
    puts "Product Type: #{product_details.product_type}"
    puts "Product Description: #{product_details.description}"
    # puts "Product Shades: #{product.details.product_colors.colour_name}"


end


